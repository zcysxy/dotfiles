# navigation/focus
# alt + cmd - left : yabai -m window --focus west
# alt + cmd - down : yabai -m window --focus south
# alt + cmd - up : yabai -m window --focus north
# alt + cmd - right : yabai -m window --focus east
#shift + alt - h: yabai -m window --focus west
#shift + alt - l: yabai -m window --focus east
#shift + alt - j: yabai -m window --focus south
#shift + alt - k: yabai -m window --focus north

# moving windows
#ctrl + alt - h : yabai -m window --warp west
#ctrl + alt - j : yabai -m window --warp south
#ctrl + alt - k : yabai -m window --warp north
#ctrl + alt - l : yabai -m window --warp east
ctrl + alt - l: yabai -m window --move rel:40:0
ctrl + alt - h: yabai -m window --move rel:-40:0
ctrl + alt - k: yabai -m window --move rel:0:-40
ctrl + alt - j: yabai -m window --move rel:0:40

# resize windows
# cmd + fn - left : \
    # yabai -m window --resize left:-20:0 ; \
    # yabai -m window --resize right:-20:0
# 
shift + alt - k: yabai -m window --resize bottom:0:-40 ;
shift + alt - j : yabai -m window --resize bottom:0:40 ;
shift + alt - l : yabai -m window --resize right:40:0 ;
shift + alt - h : yabai -m window --resize right:-40:0 ;

# equalize window size
# cmd + alt - 0 : yabai -m space --balance

# make window fullscreen (native)
# alt - f : yabai -m window --toggle native-fullscreen

# toggle current space layout
cmd + ctrl - u : yabai -m space --layout bsp
cmd + ctrl - f : yabai -m space --layout float

# temporarily float and center window
ctrl + alt - space : yabai -m window --toggle float;\
					  yabai -m window --grid 4:4:1:1:2:2

