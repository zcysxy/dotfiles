# Open apps
# alt + cmd - t: open -a /Applications/iTerm.app/Contents/MacOS/iTerm2
ctrl + cmd - t: osascript /Users/ce/.scripts/new-iterm-window.scpt
# cmd - e: open ~

# pin window to always on top
# topmost < alt + cmd - z: yabai -m window --layer above; yabai -m window --layer normal;
alt + cmd - z: yabai -m window --layer above
shift + alt - z: yabai -m window --layer normal
# topmost < alt + cmd - z: skhd -k "escape";\
#                          yabai -m window --layer above

# Opacity
# alt + cmd - o: yabai -m window --opacity 1.0 || yabai -m window --opacity 1.0
alt + cmd - 0x1B: \
	yabai -m window --opacity \
	$(($(yabai -m query --windows --window \
	| jq -re .opacity)-0.1))

alt + cmd - 0x18: \
	yabai -m window --opacity \
	$(($(yabai -m query --windows --window \
	| jq -re .opacity)+0.1))	

